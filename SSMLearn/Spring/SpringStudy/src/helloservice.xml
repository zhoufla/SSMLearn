<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans        
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context                
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<!-- id 表示组件的名字，class表示组件类 -->
	<bean id="helloService" class="com.zhou.impl.HelloServiceImpl">
		<property name="serviceDAO" ref="serviceDAO"></property>
	</bean><!-- 设值注入 -->

	<!-- <bean id="helloService" class="com.zhou.impl.HelloServiceImpl"> <constructor-arg 
		name="dao" ref="serviceDAO"></constructor-arg> </bean>构造器注入 -->

	<bean id="serviceDAO" class="com.zhou.impl.ServiceDAOImpl" />


</beans>